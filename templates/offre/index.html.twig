{% extends 'base.html.twig' %}

{% block title %}Toutes les offres{% endblock %}

{% block body %}
<h1 class="mb-3">Offres d’emploi</h1>

<a href="{{ path('offre_new') }}" class="btn btn-success mb-3">
    <i class="bi bi-plus-lg"></i> Nouvelle offre
</a>

<table class="table table-hover bg-white shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Titre</th>
            <th>Lieu</th>
            <th>Type</th>
            <th>Publiée le</th>
            <th style="width:210px">Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for offre in offres %}
        <tr>
            <td>{{ offre.titre }}</td>
            <td>{{ offre.lieu }}</td>
            <td>{{ offre.typeContrat }}</td>
            <td>{{ offre.datePublication|date('d/m/Y H:i') }}</td>
            <td>
                <a href="{{ path('offre_show', {id: offre.id}) }}"
                   class="btn btn-sm btn-primary"><i class="bi bi-eye"></i></a>
                <a href="{{ path('offre_edit', {id: offre.id}) }}"
                   class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                {{ include('offre/_delete_form.html.twig') }}
            </td>
        </tr>
    {% else %}
        <tr><td colspan="5" class="text-center">Aucune offre trouvée.</td></tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
